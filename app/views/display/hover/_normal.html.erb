                                <img src="images/star.gif" height="9" width="9">
                                <img src="images/star.gif" height="9" width="9"><br>-->

                                <!-- image -->
                                <% if tip.image.exists? -%>
                                    <%= image_tag(tip.image.url(:medium), {:align=>"left", :alt => ''}) %>
                                <% end %><br>

                                <!-- description -->
                                <%= tip.description %><br>

                                <!--also good on: not implemented-->
                                <!--Also good on: Tue, Wed, Fri-->
                            </p>
                        
                    </td>
                    <td>
                      <!--url-->
                        <% if !empty?(tip.url) %>
                            web: <a href="/calendars/<%= place.calendar.id %>/tips/<%= tip.id %>/url" target="_blank">
                                    <%=shorten(tip.url[7..tip.url.length], 35)%>
                                 </a><br>
                        <% end %>

                      <!--phone-->
                        <% if !empty?(tip.phone) %>
                            Phone: <%=tip.phone%><br>
                        <% end %>

                      <!--address-->
                      <% if !empty?(tip.address.address) -%>
                          Address: <%= tip.address.address %>
                          <br/>
                      <% end -%>

                      <!--map-->
                      <% if tip.address.lat != 0 %>
                        <a href="http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=<%=tip.address.lat%>+<%=tip.address.lng%>&z=16" target="_blank">Directions and Map</a>:<br>
                        <img src="http://maps.google.com/maps/api/staticmap?maptype=roadmap&format=gif&sensor=false&size=150x150&zoom=13&markers=<%=tip.address.lat%>,<%=tip.address.lng%>" width="150" height="150"></td>
                      <% end %>
