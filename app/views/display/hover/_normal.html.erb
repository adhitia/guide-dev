<table width="100%" border="1" cellpadding="10" cellspacing="0" bgcolor="#FFFFFF">
  <tr>
    <td><table width="100%" border="0" cellspacing="0" cellpadding="5">
      <tr >
        <td colspan="2" class="selected">
          <span class="headtextdarkerlarger">
          <% tip = place.tip %>
          <b><%= tip.name %></b></span></td>
        </tr>
      <tr>
        <td valign="top"><% if tip.image.exists? %>
          <%= image_tag tip.image.url(:medium), {:align=>"left"} %>
          <% end %></td>
        <td valign="top" class="text"><%= h tip.description %>
          <p>
            <% if !tip.address.address.blank? -%>
Address: <%= h tip.address.address %> <br/>
<% end -%>
</p>
          <p>
            <% if !tip.phone.blank? %>
            Phone: <%= h tip.phone%><br />
  <% end %>
          </p>
         </td>
      </tr>
      <tr>        <td colspan="2"><p>
	             <span class="textflow">
	             <% if !tip.url.blank? %>
	             website: <a href="/guides/<%= place.calendar.id %>/tips/<%= tip.id %>/url" target="_blank"> <%= h shorten(tip.url, 35) %> </a></span></span><br />
          </p>
          <% end %>
<% if tip.address.lat != 0 %>
          <a href="http://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=<%=tip.address.lat%>+<%=tip.address.lng%>&amp;z=16" target="_blank">Directions and Map</a>:<br />
          <img src="http://maps.google.com/maps/api/staticmap?maptype=roadmap&amp;format=gif&amp;sensor=false&amp;size=400x300&amp;zoom=13&amp;markers=<%=tip.address.lat%>,<%=tip.address.lng%>" width="400" height="300" />
          <% end %></td>
        </tr>

    </table></td>
  </tr>
</table>