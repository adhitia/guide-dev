            <table border="0" cellpadding="2" cellspacing="0" width="100%">
                <tbody>
                <tr>
                    <td colspan="2" bgcolor="#000000">
                      <span class="subheadtable"><%= tip.name %> this <%=place.weekday.name%> on a <%=place.condition.full_name%>  </span>
                        
                    </td>
                </tr>
                <tr>
                    <td valign="top" width="200">

                            <p>

