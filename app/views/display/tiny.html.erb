          <a class="s1" onclick="_cal.vote(this);" title="VOTE 1"></a>
        </div>
      </div>
    </div></div>
<div id="apDiv5" style="position: relative; float:left; width: 234px; height: 45px; z-index: 5; background: #DBDABD; vertical-align: middle">Find other guides for <a href="http://localhost:3000/guides?search_location=miami">miami</a><BR />
      <a href="http://localhost:3000/guides/<%= @calendar.id %>/share">Embed on your site or blog</a></div>
