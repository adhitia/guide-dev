<script type="text/javascript" src="/jquery/jquery.qtip-1.0.0-rc3.js"></script>
<link href="/public.css" media="screen" rel="stylesheet" type="text/css" />









<div id="apDiv1" style="position: relative;  width: 981px; height: 25px; z-index: 1; background: #DBDABD; vertical-align: middle;padding:5px;"><span class="subheadtablemed"><a href="http://localhost:3000/guides/<%= @calendar.id %>"><%= @calendar.name %>'</a> travel tips for a <%= @weather_forecast.original_condition %>  <%= @dow.name %>:</span></div>
  <% @tips.each do |show_place| %>
      <% tip = show_place.tip %>
<div id="apDiv<%= tip.name %>" style="position: relative;float:left;width:10%; height: 150px; margin:2px; z-index: 2; background-image:url('<% if tip.image.exists? -%><%= tip.image.url(:medium) %> <% else -%>/images/Maps_google_map.gif <% end %>');padding:2px;-moz-border-radius: 6px;-webkit-border-radius: 6px; border-radius: 6px;border:1px solid gray;><% if tip.advertisement %>
              <div align="right" style="color:gray;">advertisement</div>
          <% end %><span class="headtextdarkersmaller"><%= show_place.condition.name %>:</span><BR />
            <% if tip.url != '' -%>
                <a href="/guides/<%= @calendar.id %>/tips/<%= tip.id %>/url">
                  <span class="headtextdarker" ><%= tip.name %></span>                </a>
                  <div class="full_tip" style="visibility:hidden;display:none;">
		              <%= render :partial => 'display/hover/normal', :locals => {:place => show_place} %>
          </div>
                <br />
            <% else -%>
                <span class="headtextdarker" ><%= tip.name %></span>
                <div class="full_tip" style="visibility:hidden;display:none;">
		            <%= render :partial => 'display/hover/normal', :locals => {:place => show_place} %>
          </div> <% end -%></div>

     <% end -%>
<div id="apDiv3" style="position: relative; float:left; width: 166px; height: 45px; z-index: 3; background: #DBDABD"><span align="center">
                      <div align="center"><a href="javascript:_cal.render_calendar('<%= params[:target_id] %>', <%= @calendar.id %>, 'tiny', <%= @day - 1 %>);"><img src="/images/arrowleft.gif" alt="View <%= @dow.prev.name %>" width="11" height="12" border="0" /></a>&nbsp;&nbsp;&nbsp;
                      <%= @dow.name %> &nbsp;&nbsp;&nbsp;<a href="javascript:_cal.render_calendar('<%= params[:target_id] %>', <%= @calendar.id %>, 'tiny', <%= @day + 1 %>);"><img src="/images/arrowright.gif" alt="View <%= @dow.next.name %>" width="11" height="12" border="0" /></a><br />
                    <span align="center"><a href="http://localhost:3000/guides/<%= @calendar.id %>">View whole week</a></span></div></span></div>
