<% tip = place.tip %>

<tr id="tips_<%= place.id %>" class="tipRoot" form_prefix="tips[<%= tip.id %>]" city="<%= place.calendar.location.name %>" style="height:200px;">


<% fields_for "tips", tip, :index => tip.id do |tip_form| %>

<td valign="top">
  <%= place.condition.name %><br/>
  <%= tip_form.text_field :name, :size => 25, :class => 'tip_name' %>
  <a href="javascript:" class="local-search-launch" title="google suggestions for address and url" onclick="tips.loadLocalSuggestions(this);">autofill</a>
  <div class="local-search-container" style="position:absolute;background-color:white;display:none;border: 1px solid black;width:260px;"></div>
  <br/>

  <p>
    <% tip_form.fields_for tip.address do |address_form| %>
        <%= address_form.label :address, 'Street Address' %><br>
        <%= address_form.text_field :address, :class => 'tip_address_street' %>
        <%= address_form.hidden_field :lat, :class => 'tip_address_lat' %>
        <%= address_form.hidden_field :lng, :class => 'tip_address_lng' %>
    <% end %>

    <br/>
    <%= tip_form.label :url %> <%= tip_form.text_field :url, :class => 'tip_url' %> <br/>
    <%= tip_form.label :phone %> <%= tip_form.text_field :phone, :class => 'tip_phone' %> <br/>
  </p>

</td>

<td valign="top">
      <%= tip_form.label :description %><br/>
      <%= tip_form.text_area(:description, :rows => 7, :cols => 40) %><br/>
</td>

<td valign="top">
  <div class="upload_image" style="width:500px;float:left;">
    <ul>
      <% if tip.image.exists? -%>
          <li><a href="#tip-<%=place.id%>-current-image"><span>current image</span></a></li>
      <% end -%>
      <li><a href="#tip-<%=place.id%>-upload-google"><span>google suggestions</span></a></li>
      <li><a href="#tip-<%=place.id%>-upload-drive"><span>upload image</span></a></li>
    </ul>
    <% if tip.image.exists? -%>
        <div id="tip-<%=place.id%>-current-image">
            <%= image_tag tip.image.url(:thumb), :class => "full-image", :full_url => tip.image.url %>
        </div>
    <% end -%>
    <div id="tip-<%=place.id%>-upload-google">
      <div class="google-image-choices"></div>
    </div>
    <div id="tip-<%=place.id%>-upload-drive">
      <%= tip_form.label :image %><br/>
      <%= tip_form.file_field :image %>
    </div>

  </div>
</td>

<% end %>


</tr>
