<h1>Add your tip details to your TRAVEL GUIDE</h1>


<div id="edit_calendar_tabs" width="100%">
  <ul>
    <span class="edit-calendar-tabs-weekdays">
      <% @weekdays.each do |day| %>
        <li style="width:12%;">
          <a style="width:100%;" title="<%= day.name %>" href="/guides/<%= @calendar.id %>/edit_day/<%= day.id %>"><span><%= day.name %></span></a>
        </li>
      <% end %>
      <li style="float:right;"><a target="<%=@conditions[0].full_name%>" href="toggle-tabs">View by tip category</a></li>
    </span>

    <span class="edit-calendar-tabs-conditions">
      <% @conditions.each do |cond| %>
        <li style="min-width:6%;">
          <a style="width:100%;" title="<%= cond.full_name %>" href="/guides/<%=@calendar.id%>/edit_condition/<%=cond.id%>"><span style="font-size:10px"><%= cond.full_name %></span></a>
        </li>
      <% end %>
      <li style="float:right;"><a target="<%=@weekdays[0].name%>" href="toggle-tabs">View by Weekday</a></li>
    </span>
  </ul>

</div>



<div id="new_tip" style="display:none;">
  <% form_tag("/guides/#{@calendar.id}/tips/create", :method => "post", :id => 'new_tip_form') do %>
      <input id="new_tip_name" name="new_tip_name"/>
  <% end %>
</div>


