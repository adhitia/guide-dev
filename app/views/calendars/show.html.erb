<h1>Overview of "<%= h @calendar.name %>" Guide</h1>
<b>Location:</b>      <%= h @calendar.location.name %>  <b> | Times Viewed:</b>
<%= h @calendar.view_count %>
<b> | Times Clicked:</b>
<%= h @calendar.click_count %>

<p>
</p>


<div id="view_tips">

  <table width="100%" border="1" cellpadding="10" cellspacing="0">

    <tr>
      <th></th>
      <% @weekdays.each do |day| %>
          <th width="100px">
            <%= day.name %>
            <% if @full_access %>
                <br/>
                <a href="/guides/<%= @calendar.id %>/edit#<%= day.name %>">edit</a>
            <% end %>
          </th>
      <% end %>
    </tr>

    <% prev_cond = Condition.new %>
    <% @conditions.each do |condition| %>

        <!-- horizontal labels for 'day', 'dinner' and 'nigthlife' -->
        <% if condition.group != prev_cond.group %>
            <tr>
              <td class="headtext" colspan="20" align="center" style="background-color:blue;">
                <%= condition.group %>
              </td>
            </tr>
        <% end %>
        <% prev_cond = condition %>

        <tr>
          <td>
            <%= condition.weather ? condition.weather : '' %> <%= condition.name %>
            <% if @full_access %>
                <br/>
                <a href="/guides/<%= @calendar.id %>/edit#<%= condition.name %>">edit</a>
            <% end %>
          </td>
          <% @weekdays.each do |day| %>
              <% place = @calendar.show_places.detect { |t| t.condition.id == condition.id and t.weekday.id == day.id } %>
              <% tip = place == nil ? nil : place.tip %>

              <td valign="top" class="tip-container" condition_id="<%= condition.id %>" day_id="<%= day.id %>">
                <% if tip != nil then %>

                    <div id="tip_<%=place.id%>" class="tip" tip_id="<%= tip.id %>" place_id="<%= place.id %>" calendar_id="<%= @calendar.id %>">

                      <% if @full_access %>
                      <table width=100% align="right">
                        <tr>
                          <td>
                            <!--move tip-->
                            <div class="move-tip"></div>
                          </td>
                          <td width=20px>
                            <!--delete tip-->
                            <div class="delete-tip"></div>
                          </td>
                        </tr>
                      </table>
                      <% end %>

                      <!--view full tip-->
                      <!--link here-->
                      <a class="view-tip textgray" rel="#tip_<%=place.id%> .full-tip-overlay">view</a><br/>
                      <!--contents here-->
                      <div id="full_tip" class="full-tip-overlay">
                        <b><%= tip.name %></b><br/>
                        <%= image_tag tip.image.url(:medium), {:align=>"left"} %>
                        <br/>

                        <!--url-->
                          <% if !empty?(tip.url) %>
                              web: <a href="/guides/<%= place.calendar.id %>/tips/<%= tip.id %>/url" target="_blank">
                                      <%=shorten(tip.url[7..tip.url.length], 35)%>
                                   </a><br>
                          <% end %>

                        <!--phone-->
                          <% if !empty?(tip.phone) %>
                              Phone: <%=tip.phone%><br>
                          <% end %>

                        <!--address-->
                        <% if !empty?(tip.address.address) -%>
                            Address: <%= tip.address.address %>
                            <br/>
                        <% end -%>

                        <!--map-->
                        <% if tip.address.lat != 0 %>
                          <a href="http://maps.google.com/maps?f=q&source=s_q&hl=en&geocode=&q=<%=tip.address.lat%>+<%=tip.address.lng%>&z=16" target="_blank">Directions and Map</a>:<br>
                          <img src="http://maps.google.com/maps/api/staticmap?maptype=roadmap&format=gif&sensor=false&size=150x100&zoom=13&markers=<%=tip.address.lat%>,<%=tip.address.lng%>" width="150" height="100">
                        <% end %>

                      </div>

                      <!-- tip statistics -->
                      <span class="headtextdarker"><b><%= tip.name %></b><br/></span>
                        <span class="textgray">
                          Views= <%= tip.view_count %>
                          Clicks= <%= tip.click_count %>
                        </span>
                    </div>

                <% else %>
                    <div class="no-tip" align="center"><BR>no tip<BR><BR></div>
                <% end %>
              </td>


          <% end %>
        </tr>
    <% end %>

  </table>



</div>


<BR><BR>
<div align="right">
  <a href="/guides/<%= @calendar.id %>/share" class="textflow">view live version and get script</a>
</div>
