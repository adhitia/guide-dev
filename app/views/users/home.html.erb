Your calendars<br/>
<table>
  <tr>
    <th>Name</th>
  </tr>

<% @user.calendars.each do |calendar| %>
  <tr>
    <td><%=h calendar.name %></td>
    <td><%= link_to 'Show', show_calendar_path(calendar) %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
  </tr>
<% end %>
<% if @user.calendars.length == 0 %>
  <tr><td>none</td></tr>
<% end %>
</table>

