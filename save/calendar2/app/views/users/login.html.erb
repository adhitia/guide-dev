<% if flash[:message] %>
    <div><%= flash[:message] %></div>
<% end %>
<% if flash[:error] %>
    <div><%= flash[:error] %></div>
<% end %>

<% form_tag :action => 'process_login' do |f| %>
    Username: <%= text_field "user", "email" %>
    Password: <%= password_field "user", "password" %>
    <%= submit_tag "login" %>
<% end %>