<h1>Account Info</h1>

<br/>

Your calendars<br/>
<table>
  <tr>
    <th>Name</th>
  </tr>

<% @user.calendars.each do |calendar| %>
  <tr>
    <td><%=h calendar.name %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
    <td><%= link_to 'Delete', calendar, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
<% if @user.calendars.length == 0 %>
  <tr><td>none</td></tr>
<% end %>
</table>

<br/>
<br/>
Your ads<br/>
<table>
  <tr>
    <th>Name</th>
    <th>Author</th>
  </tr>

<% @advertised_calendars.each do |calendar| %>
  <tr>
    <td><%=h calendar.name %></td>
    <td><%=h calendar.user.name %></td>
    <td><%= link_to 'Show', calendar %></td>
    <td><%= link_to 'See ads', :controller => :calendars, :action => :ads, :id => calendar %></td>
  </tr>
<% end %>
  <% if @advertised_calendars.length == 0 %>
    <tr><td>none</td></tr>
  <% end %>
</table>

<br/>
<%= link_to 'New calendar', new_calendar_path %>

<br/>
<%= link_to 'Edit', edit_user_path(@current_user) %>


