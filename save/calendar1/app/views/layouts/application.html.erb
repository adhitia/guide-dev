<body>

<% if @current_user %>
    <div align="right">Welcome, <%= link_to @current_user.name, show_user_path(:id => @current_user) %> | <%= link_to 'Sign out', logout_path %></div>
    <hr/>
<% else %>
    <div align="right">
      <%= link_to 'Sign in', :controller => :users, :action => :login %> |
      <%= link_to 'Register', :controller => :users, :action => :new %>
    </div>
    <hr/>
<% end %>

<p style="color: green"><%= flash[:notice] %></p>

<%= yield %>


